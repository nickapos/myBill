CREATE cached TABLE companies (cid integer generated by default as identity primary key , companyName varchar(100), afm varchar(9), catid integer,comment categoryName varchar(100) default null ,unique (afm),foreign key (catid) references categories(catid) on delete set null )
CREATE cached TABLE bills (bid integer generated by default as identity primary key , cid integer, price float, dateOfIssue date, dayOfPayment date, foreign key (cid) references  companies(cid) on delete cascade)
create cached table income (inid integer generated by default as identity primary key, cid integer, amount float, dateOfPayment date, foreign key (cid) references companies(cid) on delete cascade)
create cached table categories (catid integer generated by default as identity primary key , categoryName varchar(100), unique (categoryName)) 
